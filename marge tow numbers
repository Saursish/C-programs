//take tow number and make a 3rd number taking the odd position digits from 1st number and even position digits from 2nd number.
#include<stdio.h>
#include<string.h>
void new_number(char*,char*,char*);
int main()
{
	char s1[100],s2[100],s3[100];
	
	printf("enter two integers\n");
	scanf("%s%s",&s1,&s2);
	new_number(s1,s2,s3);
	printf("%s",s3);
	return 0;
}
void new_number(char*s1,char*s2,char*s3)
{
	int i=0,j=0;
	*s3=*s1;
	i++;
	while(*(s1+j)!='\0'&& *(s2+j)!='\0')
	{
		j++;
		*(s3+i)=*(s2+j);
		i++;
		j++;
		if(j>=strlen(s1))
		break;
		*(s3+i)=*(s1+j);
		i++;	
	}
}
